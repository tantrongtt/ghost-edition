{{{html}}}

<section class="single-cta">
    {{#has visibility="paid"}}
        <h3 class="single-cta-title">This post is for paying subscribers only</h3>
    {{/has}}
    {{#has visibility="members"}}
        <h3 class="single-cta-title">Nội dung này chỉ dành cho thành viên</h3>
        <p class="single-cta-desc">Subscribe để đọc tiếp—Free</p>
    {{/has}}
    {{#has visibility="filter"}}
        <h3 class="single-cta-title">This post is for subscribers on the {{products}} only</h3>
    {{/has}}
    {{#if @member}}
        <button class="button single-cta-button" data-portal="account/plans">Upgrade now</button>
    {{else}}
        <button class="button single-cta-button" data-portal="signup">Subscribe ngay</button>
        <br>
        <button class="button-text single-cta-footer" data-portal="signin">Bạn đã có tài khoản? Đăng nhập</button>
    {{/if}}
</section>